<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magenest_UltimateFollowupEmail::ultimatefollowupemail" title="Magenest Ultimate Followup Emails">
                    <resource id="Magenest_UltimateFollowupEmail::ultimatefollowupemail_setting" title="Setting" sortOrder="60">
                        <resource id="Magenest_UltimateFollowupEmail::ultimatefollowupemail_rule"
                                  title="Rules" sortOrder="10" />
                        <resource id="Magenest_UltimateFollowupEmail::config_ultimatefollowupemail_menu"
                                  title="Configuration" sortOrder="20" />
                        <resource id="Magenest_UltimateFollowupEmail::email_template"
                                  title="Email Templates" sortOrder="30" />
                        <resource id="Magenest_UltimateFollowupEmail::setup_coupon"
                                  title="Coupons" sortOrder="40" />
                    </resource>

                    <resource id="Magenest_UltimateFollowupEmail::ultimatefollowupemail_records" title="FollowUp Email Records" sortOrder="70">
                        <resource id="Magenest_UltimateFollowupEmail::ultimatefollowupemail_mail"
                                  title="Mail Log" sortOrder="10" />
                        <resource id="Magenest_UltimateFollowupEmail::ultimatefollowupemail_sms"
                                  title="Sms Log" sortOrder="20" />
                        <resource id="Magenest_UltimateFollowupEmail::ultimatefollowupemail_cart"
                                  title="Abandoned Carts" sortOrder="30" />
                        <resource id="Magenest_UltimateFollowupEmail::ultimatefollowupemail_birthday"
                                  title="Customer Birthdays" sortOrder="40" />
                        <resource id="Magenest_UltimateFollowupEmail::ultimatefollowupemail_unsubscriber"
                                  title="Unsubscriber" sortOrder="45" />

                    </resource>

                    <resource id="Magenest_UltimateFollowupEmail::ultimatefollowupemail_reports" title="FollowUp Email Reports" sortOrder="80">
                        <resource id="Magenest_UltimateFollowupEmail::ultimatefollowupemail_charts"
                                  title="Abandoned Cart Charts" sortOrder="10" />
                        <resource id="Magenest_UltimateFollowupEmail::ultimatefollowupemail_campaign_charts"
                                  title="Email Campaign Charts" sortOrder="20" />
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Magenest_UltimateFollowupEmail::config_ultimatefollowupemail" title="FollowUp Emails" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
