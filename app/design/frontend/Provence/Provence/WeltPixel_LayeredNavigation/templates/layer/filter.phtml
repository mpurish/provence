                <?php preg_match('/\d+/', $filterItem->getValue(), $priceArr); ?>
                <?php $priceMin = $priceArr[0]; ?>
            <?php elseif($i === count($filterItems)): ?>
                <?php preg_match('/\d+/', $filterItem->getValue(), $priceArr); ?>
                <?php $priceMax = $priceArr[0]; ?>
