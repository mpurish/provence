<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.main">
            <block class="Magento\Catalog\Block\Product\View" name="attributes" template="product/view/attributes.phtml" />

            <block class="Magento\Catalog\Block\Product\View" name="description.colours" template="product/view/descriptioncolours.phtml" />

            <block class="Magento\Catalog\Block\Product\View" name="breadcrumbcolours" template="product/view/breadcrumbcolours.phtml" />

            <block class="Magento\Catalog\Block\Product\View" name="pdp.shipping" template="product/view/shipping.phtml" />
        </referenceBlock>

        <container name="pdpform" as="pdpform" label="pdpform" htmlTag="div" htmlClass="pdp--form" htmlId="pdpform" after="body" />

        <move element="pdpform" destination="content" before="product.info.main"/>

        <move element="product.info.price" destination="pdpform" before="-"/>

        <move element="product.info" destination="pdpform" after="product.info.price"/>

        <move element="product.info.addto" destination="pdpform" after="product.info"/>

        <move element="product.info.social" destination="pdpform" after="-"/>

        <move element="product.info.review" destination="pdpform" before="product.info.social"/>

        <move element="pdp.shipping" destination="pdpform" before="product.info.addto"/>

        <move element="breadcrumbcolours" destination="page.main.title" before="-" />

        <move element="product.info.sku" destination="page.main.title" after="-" />

        <move element="product.info.description" destination="product.info.main" after="-"/>

        <move element="description.colours" destination="product.info.main" after="product.info.description"/>

        <move element="attributes" destination="content" before="product.info.details"/>

        <referenceBlock name="product.attributes" remove="true" />

        <move element="attr" destination="product.info.main" before="-" />

    </body>
</page>
